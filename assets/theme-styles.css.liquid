.banner { text-align: center; position:relative; clear: both; margin: 30px 0 0; }
.banner > img:hover { opacity: 1; filter:alpha(opacity=100); }
.banner .container { height: 100%; position: absolute; top: 0; right: 5%; margin-left: 0px; }
.banner .inner { width: 460px; display: table; float: right; height: 100%; }
.banner .inner .content { display: table-cell; vertical-align: middle; }
.banner h2 { font-size: 40px; font-weight: 700; color: #4bd122; margin: 0 0 15px; position: relative;}
.banner p.bnrcnt { background: rgba(75, 209, 39, 0.8) none repeat scroll 0 0; color: #fff; margin: 0 0 35px; padding: 10px; }
.banner p.line { width: 50px; height: 2px; background: #4bd122; margin: 0 auto 20px; }
